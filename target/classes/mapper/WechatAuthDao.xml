<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imooc.myo2o.dao.WechatAuthDao">
	<resultMap id="wechatAuthResultMap" type="com.imooc.myo2o.entity.WechatAuth">
		<id column="wechat_auth_id" property="wechatAuthId" />
		<result column="user_id" property="userId" />
		<result column="open_id" property="openId" />
		<result column="create_time" property="createTime" />
		<association property="personInfo" column="user_id"
			javaType="com.imooc.myo2o.entity.PersonInfo">
			<id column="user_id" property="userId" />
			<result column="name" property="name" />
			<result column="birthday" property="birthday" />
			<result column="gender" property="gender" />
			<result column="phone" property="phone" />
			<result column="email" property="email" />
			<result column="profile_img" property="profileImg" />
			<result column="customer_flag" property="customerFlag" />
			<result column="shop_owner_flag" property="shopOwnerFlag" />
			<result column="admin_flag" property="adminFlag" />
			<result column="create_time" property="createTime" />
			<result column="last_edit_time" property="lastEditTime" />
			<result column="enable_status" property="enableStatus" />
		</association>
	</resultMap>
	<select id="queryWechatInfoByOpenId" resultMap="wechatAuthResultMap"
		parameterType="String">
		SELECT
		w.wechat_auth_id,
		w.user_id,
		w.open_id,
		w.create_time,
		p.user_id,
		p.name,
		p.birthday,
		p.gender,
		p.phone,
		p.email,
		p.profile_img,
		p.customer_flag,
		p.shop_owner_flag,
		p.admin_flag,
		p.create_time,
		p.last_edit_time,
		p.enable_status
		FROM
		tb_wechat_auth w
		LEFT JOIN
		tb_person_info
		p ON w.user_id =
		p.user_id
		WHERE
		w.open_id =
		#{openId}
	</select>
	<insert id="insertWechatAuth" parameterType="com.imooc.myo2o.entity.WechatAuth"
		useGeneratedKeys="true" keyProperty="wechatAuthId" keyColumn="wechat_auth_id">
		INSERT
		INTO
		tb_wechat_auth(user_id,open_id,create_time)
		VALUES
		(#{userId},#{openId},#{createTime})
	</insert>
	<delete id="deleteWechatAuth">
		DELETE FROM
		tb_wechat_auth
		WHERE
		wechat_auth_id =
		#{wechatAuthId}
	</delete>
</mapper>