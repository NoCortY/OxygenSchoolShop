<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.objectspace.schoolshop.dao.UserShopMapDao">
	<resultMap id="userShopResultMap" type="cn.objectspace.schoolshop.entity.UserShopMap">
		<id column="user_shop_id" property="userShopId" />
		<result column="user_id" property="userId" />
		<result column="shop_id" property="shopId" />
		<result column="user_name" property="userName" />
		<result column="shop_name" property="shopName" />
		<result column="create_time" property="createTime" />
		<result column="point" property="point" />
		<association property="user" column="user_id"
			javaType="cn.objectspace.schoolshop.entity.PersonInfo">
			<id column="user_id" property="userId" />
			<result column="name" property="name" />
			<result column="birthday" property="birthday" />
			<result column="gender" property="gender" />
			<result column="phone" property="phone" />
			<result column="email" property="email" />
			<result column="profile_img" property="profileImg" />
			<result column="customer_flag" property="customerFlag" />
			<result column="shop_owner_flag" property="shopOwnerFlag" />
			<result column="admin_flag" property="adminFlag" />
			<result column="create_time" property="createTime" />
			<result column="last_edit_time" property="lastEditTime" />
			<result column="enable_status" property="enableStatus" />
		</association>
		<association property="shop" column="shop_id"
			javaType="cn.objectspace.schoolshop.entity.Shop">
			<id column="shop_id" property="shopId" />
			<result column="shop_name" property="shopName" />
			<result column="shop_desc" property="shopDesc" />
			<result column="shop_addr" property="shopAddr" />
			<result column="phone" property="phone" />
			<result column="shop_img" property="shopImg" />
			<result column="longitude" property="longitude" />
			<result column="latitude" property="latitude" />
			<result column="priority" property="priority" />
			<result column="create_time" property="createTime" />
			<result column="last_edit_time" property="lastEditTime" />
			<result column="enable_status" property="enableStatus" />
			<result column="advice" property="advice" />
		</association>
	</resultMap>
	<select id="queryUserShopMapList" resultMap="userShopResultMap">
		SELECT
		user_shop_id,
		user_id,
		shop_id,
		user_name,
		shop_name,
		create_time,
		point
		FROM
		tb_user_shop_map
		<where>
			<if test="userShopCondition.userId!=null">
				and user_id = #{userShopCondition.userId}
			</if>
			<if test="userShopCondition.shopId!=null">
				and shop_id = #{userShopCondition.shopId}
			</if>
			<!-- 写like语句的时候 一般都会写成 like '% %' 在mybatis里面写就是应该是 like '%${name} %' 而不是 
				'%#{name} %' ${name} 是不带单引号的，而#{name} 是带单引号的 -->
			<if test="userShopCondition.userName!=null">
				and user_name like '%${userShopCondition.userName}%'
			</if>
			<if test="userShopCondition.shopName!=null">
				and shop_name like
				'%${userShopCondition.shopName}%'
			</if>
			<if test="userShopCondition.createTime!=null">
				and create_time > #{userShopCondition.createTime}
			</if>
		</where>
		LIMIT #{rowIndex},#{pageSize};
	</select>
	<select id="queryUserShopMapCount" resultType="int">
		SELECT
		count(1)
		FROM
		tb_user_shop_map
		<where>
			<if test="userShopCondition.userId!=null">
				and user_id = #{userShopCondition.userId}
			</if>
			<if test="userShopCondition.shopId!=null">
				and shop_id = #{userShopCondition.shopId}
			</if>
			<!-- 写like语句的时候 一般都会写成 like '% %' 在mybatis里面写就是应该是 like '%${name} %' 而不是 
				'%#{name} %' ${name} 是不带单引号的，而#{name} 是带单引号的 -->
			<if test="userShopCondition.userName!=null">
				and user_name like '%${userShopCondition.userName}%'
			</if>
			<if test="userShopCondition.shopName!=null">
				and shop_name like
				'%${userShopCondition.shopName}%'
			</if>
			<if test="userShopCondition.createTime!=null">
				and create_time > #{userShopCondition.createTime}
			</if>
		</where>
	</select>
	<select id="queryUserShopMap" resultType="cn.objectspace.schoolshop.entity.UserShopMap"
		parameterType="long">
		SELECT
		user_shop_id,
		user_id,
		shop_id,
		user_name,
		shop_name,
		create_time,
		point
		FROM
		tb_user_shop_map
		WHERE
		user_id = #{userId}
		AND
		shop_id = #{shopId}
	</select>
	<insert id="insertUserShopMap" parameterType="cn.objectspace.schoolshop.entity.UserShopMap"
		useGeneratedKeys="true" keyProperty="userShopId" keyColumn="user_shop_id">
		INSERT
		INTO
		tb_user_product_map(user_id,shop_id,
		user_name,shop_name,create_time,point)
		VALUES
		(#{userId},#{shopId},
		#{userName},#{shopName},#{createTime},#{point})
	</insert>
	<update id="updateUserShopMapPoint" parameterType="cn.objectspace.schoolshop.entity.UserShopMap"
		keyProperty="user_shop_id" useGeneratedKeys="true">
		UPDATE tb_user_shop_map
		SET point=#{point}
		where user_id = #{userId}
		AND shop_id = #{shopId}
	</update>
</mapper>