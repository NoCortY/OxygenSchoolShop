<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.objectspace.schoolshop.dao.LocalAuthDao">
	<resultMap id="localAuthResultMap" type="cn.objectspace.schoolshop.entity.LocalAuth">
		<id column="local_auth_id" property="localAuthId" />
		<id column="user_id" property="userId" />
		<result column="user_name" property="userName" />
		<result column="password" property="password" />
		<result column="create_time" property="createTime" />
		<result column="last_edit_time" property="lastEditTime" />
		<association property="personInfo" column="user_id"
			javaType="cn.objectspace.schoolshop.entity.PersonInfo">
			<id column="user_id" property="userId" />
			<result column="name" property="name" />
			<result column="birthday" property="birthday" />
			<result column="gender" property="gender" />
			<result column="phone" property="phone" />
			<result column="email" property="email" />
			<result column="profile_img" property="profileImg" />
			<result column="customer_flag" property="customerFlag" />
			<result column="shop_owner_flag" property="shopOwnerFlag" />
			<result column="admin_flag" property="adminFlag" />
			<result column="create_time" property="createTime" />
			<result column="last_edit_time" property="lastEditTime" />
			<result column="enable_status" property="enableStatus" />
		</association>
	</resultMap>
	<select id="queryLocalByUserNameAndPwd" resultMap="localAuthResultMap"
		parameterType="String">
		SELECT
		l.local_auth_id,
		l.user_id,
		l.user_name,
		l.password,
		l.create_time,
		l.last_edit_time,
		p.user_id,
		p.name,
		p.birthday,
		p.gender,
		p.phone,
		p.email,
		p.profile_img,
		p.customer_flag,
		p.shop_owner_flag,
		p.admin_flag,
		p.create_time,
		p.last_edit_time,
		p.enable_status
		FROM
		tb_local_auth l
		LEFT
		JOIN
		tb_person_info
		p ON l.user_id =
		p.user_id
		WHERE
		l.user_name =
		#{userName}
		AND
		l.password = #{password}
	</select>
	<select id="queryLocalByUserId" resultMap="localAuthResultMap"
		parameterType="long">
		SELECT
		l.local_auth_id,
		l.user_id,
		l.user_name,
		l.password,
		l.create_time,
		l.last_edit_time,
		p.user_id,
		p.name,
		p.birthday,
		p.gender,
		p.phone,
		p.email,
		p.profile_img,
		p.customer_flag,
		p.shop_owner_flag,
		p.admin_flag,
		p.create_time,
		p.last_edit_time,
		p.enable_status
		FROM
		tb_local_auth l
		LEFT
		JOIN
		tb_person_info
		p ON l.user_id =
		p.user_id
		WHERE
		l.user_id =
		#{userId}
	</select>
	<insert id="insertLocalAuth" parameterType="cn.objectspace.schoolshop.entity.LocalAuth"
		useGeneratedKeys="true" keyProperty="localAuthId" keyColumn="local_auth_id">
		INSERT
		INTO
		tb_local_auth(user_name,password,user_id,create_time,last_edit_time)
		VALUES
		(#{userName},#{password},#{userId},#{createTime},#{lastEditTime})
	</insert>
	<update id="updateLocalAuth">
		update tb_local_auth
		<set>
			<if test="newPassword != null">password=#{newPassword},</if>
			<if test="lastEditTime != null">last_edit_time=#{lastEditTime}</if>
		</set>
		where user_id=#{userId}
		AND user_name=#{userName}
		AND
		password=#{password}
	</update>
</mapper>